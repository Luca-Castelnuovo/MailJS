{% extends "base.twig" %}
{% set title = "Login" %}
{% set navbarDisable = true %}

{% block content %}
<div class="row">
    <div class="col s12 m8 offset-m2 l4 offset-l4">
        <div class="card">
            <div class="card-action blue accent-4 white-text">
                <h3>MailJS</h3>
            </div>
            <div class="card-content">
                {% if message %}
                    <div class="card-panel hoverable z-depth-2">
                        <span class="flow-text">
                            {{ message|e }}
                        </span>
                    </div>
                {% endif %}
                <div class="row center">
                    {% if logged_in %}
                        <a class="waves-effect waves-light btn-large blue accent-4" href="/dashboard">
                            Go to dashboard
                        </a>
                    {% else %}
                        <a class="waves-effect waves-light btn-large blue accent-4" href="/auth/login">
                            Login with GitHub
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
