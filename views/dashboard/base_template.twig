<div class="col s12 m6 xl3">
    <div class="card hoverable">
        <div class="card-content">
            <span class="card-title">{{ template.name|e }}</span>
        </div>
        <div class="card-action">
            <div class="row">
                <div class="col s12 m6">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="template-{{ template.id }}-edit">
                        Edit
                    </button>
                    {% include 'dashboard/edit_template.twig' %}
                </div>
                <div class="col s12 m6">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="template-{{ template.id }}-delete">
                        Delete
                    </button>
                    {% include 'dashboard/delete_template.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
