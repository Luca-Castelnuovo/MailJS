<div class="col s12 m12 l6">
    <div class="card hoverable">
        <div class="card-content">
            <span class="card-title">{{ template.name }}</span>
        </div>
        <div class="card-action">
            <div class="row">
                <div class="col s12 m3">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="template-{{ template.id }}-edit">
                        Edit
                    </button>
                    {% include 'dashboard/edit_template.twig' %}
                </div>
                <div class="col s12 m3">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="template-{{ template.id }}-key">
                        Key
                    </button>
                    {% include 'dashboard/key_template.twig' %}
                </div>
                <div class="col s12 m3">
                    <a class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" href="/history/{{ template.id }}" target="_blank">
                        History
                    </a>
                </div>
                <div class="col s12 m3">
                    <button class="btn modal-trigger blue accent-4 waves-effect waves-light" style="width: 100%" data-target="template-{{ template.id }}-delete">
                        Delete
                    </button>
                    {% include 'dashboard/delete_template.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
