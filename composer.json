{
    "name": "luca-castelnuovo/mailjs",
    "description": "Backend for email submissions powering serverless applications",
    "keywords": [
        "mailjs",
        "cubequence"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Luca Castelnuovo",
            "email": "luca@castelnuovo.xyz"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "cubequence/framework": "^1.0",
        "phpmailer/phpmailer": "^6.1"
    },
    "require-dev": {
        "filp/whoops": "^2.7"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "support": {
        "issues": "https://github.com/Luca-Castelnuovo/MailJS/issues",
        "source": "https://github.com/Luca-Castelnuovo/MailJS"
    }
}
